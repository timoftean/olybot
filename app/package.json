{
  "name": "olybot",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node dist",
    "dev": "tsc --watch & NODE_ENV=development nodemon dist",
    "clean": "rimraf coverage build tmp",
    "build": "tsc --skipLibCheck",
    "watch": "tsc -w -p tsconfig.release.json",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "pretest": "npm run lint",
    "test": "mocha --colors --require ts-node/register ./**/*.spec.ts",
    "test:coverage": "nyc -e '.ts' --r html -r lcov -r text npm run test",
    "deploy": "now --no-verify --docker --dotenv=.env.production --public && now alias oly"
  },
  "keywords": [],
  "author": "Timofte Alexandru",
  "license": "MIT",
  "dependencies": {
    "@slack/client": "^4.2.2",
    "body-parser": "^1.18.2",
    "concurrently": "^3.5.1",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "4.15.3",
    "express-session": "^1.15.6",
    "http": "0.0.0",
    "method-override": "^2.3.10",
    "mongoose": "^5.0.7",
    "morgan": "^1.9.0",
    "node-fetch": "^3.1.1",
    "nodemon": "1.11.0",
    "passport": "^0.4.0",
    "passport-gitlab2": "^4.0.0",
    "path": "^0.12.7",
    "slack": "^11.0.0",
    "typescript": "^2.9.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.8",
    "@types/jest": "^23.1.0",
    "@types/method-override": "0.0.31",
    "@types/mocha": "2.2.41",
    "@types/mongodb": "^3.0.5",
    "@types/mongoose": "^5.0.2",
    "@types/morgan": "^1.7.35",
    "@types/node": "7.0.22",
    "@types/node-fetch": "^1.6.9",
    "@types/passport": "^0.4.5",
    "chai": "^4.1.2",
    "eslint": "4.18.2",
    "eslint-config-airbnb-base": "11.2.0",
    "eslint-plugin-import": "2.3.0",
    "eslint-plugin-promise": "3.5.0",
    "jest": "^23.1.0",
    "mocha": "^3.4.2",
    "nyc": "^12.0.2",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.1",
    "tsc": "1.20150623.0",
    "tslint": "^5.10.0",
    "typescript-eslint-parser": "3.0.0"
  },
  "watch": {
    "test:coverage": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,json,js",
      "quiet": true,
      "legacyWatch": true
    }
  },
  "nyc": {
    "exclude": [
      "dist",
      "src/__test__"
    ]
  }
}
